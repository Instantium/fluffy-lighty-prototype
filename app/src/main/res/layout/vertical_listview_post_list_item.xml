<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corners"
        android:elevation="5dp">

        <com.joooonho.SelectableRoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/post_list_item_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="@dimen/card_corner_radius"
            app:sriv_left_top_corner_radius="@dimen/card_corner_radius"/>

        <TextView
            android:id="@+id/post_list_item_category_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/post_list_item_image_view"
            android:layout_toRightOf="@id/post_list_item_image_view"/>

        <TextView
            android:id="@+id/post_list_item_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/post_list_item_category_name_text_view"
            android:layout_alignStart="@id/post_list_item_category_name_text_view"
            android:layout_below="@id/post_list_item_category_name_text_view"/>
    </RelativeLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/horizontal_list_item_width"
                    android:layout_height="@dimen/horizontal_list_item_height"
                    android:layout_margin="5dp">

        <ImageView
            android:id="@+id/horizontal_listview_list_item_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/horizontal_listview_list_item_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontal_listview_list_item_image_view"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
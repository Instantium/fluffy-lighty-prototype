<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="@dimen/horizontal_list_item_width"
                  android:layout_height="@dimen/horizontal_list_item_height"
                  android:layout_margin="5dp"
                  android:orientation="vertical">

        <ImageView
            android:id="@+id/horizontal_listview_list_item_image_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/horizontal_listview_list_item_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/horizontal_listview_list_item_pricing_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>